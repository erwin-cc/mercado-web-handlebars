<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/9ab51308f0.js" crossorigin="anonymous"></script>
    <title>Mercado Web</title>
</head>

<body>
    <header>
        {{> menu}}
    </header>
    <section id="dashboard" class="mt-2">
        {{> dashboard }}
    </section>

    <section id="modal">
        <div class="modal fade" id="modalCarrito" tabindex="-1" aria-labelledby="Carrito de compras" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Productos Seleccionados</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row text-center px-3">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="footer">
        <div class="bg-dark container-fluid text-center fixed-bottom">
            <p class="txt-footer py-2">Erwin Contreras Cabrera. 2022</p>
        </div>
    </section>


    <script src="jquery/jquery.min.js"></script>
    <script src="bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="js/script.js"></script>
</body>

</html>